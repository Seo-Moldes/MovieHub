generator client {
    provider = "prisma-client-js"
    output   = "./generated/postgresql_client"
}

datasource db {
    provider = "postgresql"
    url      = env("SQL_CLUSTER_URI")
}

model Users {
    id          Int      @id @default(autoincrement())
    name        String
    email       String   @unique
    movies      Movies[]
    moviesArray String[]
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

model Movies {
  id          Int    @id @default(autoincrement()) 
  title       String
  score       Int
  year        Int
  genres      Genres[]
  genresArray String[]
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  users       Users?    @relation(fields: [usersId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  usersId     Int?   
  imageUrl    String?
  imageId     String?
}

model Publicmovies {
    id          Int       @id @default(autoincrement())
    title       String
    score       Int
    year        Int
    genres      Genres[]
    genresArray String[]
    createdAt   DateTime? @default(now())
    updatedAt   DateTime? @updatedAt
    imageUrl    String?
    imageId     String?
}

model Genres {
    id             Int           @id @default(autoincrement())
    genre          String        @unique
    createdAt      DateTime      @default(now())
    updatedAt      DateTime      @updatedAt
    movies         Movies?       @relation(fields: [moviesId], references: [id])
    moviesId       Int?
    Publicmovies   Publicmovies? @relation(fields: [publicmoviesId], references: [id])
    publicmoviesId Int?
}